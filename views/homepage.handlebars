<h1>Welcome to the Blog</h1>
<ul>
    {{#each posts}}
        <li>
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <p>Posted by {{this.User.username}} on {{this.createdAt}}</p>
        </li>
        {{else}}
            <p>No Posts Available.</p>
    {{/each}}
</ul>